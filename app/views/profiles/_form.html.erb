<%= form_with(model: profile, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |f| %>
  <div class="mb-4">
    <%= f.label :given_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :given_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :gender, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.select :gender, ['Male', 'Female', 'Other'], {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :profile_picture, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.file_field :profile_picture, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= f.label :balance, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.number_field :balance, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>