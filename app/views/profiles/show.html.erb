<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Your Profile</h1>
  
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <% if @profile.profile_picture.present? %>
      <%= image_tag @profile.profile_picture.url, class: "w-32 h-32 rounded-full mb-4" %>
    <% end %>
    
    <p class="mb-2"><strong>Given Name:</strong> <%= @profile.given_name %></p>
    <p class="mb-2"><strong>Last Name:</strong> <%= @profile.last_name %></p>
    <p class="mb-2"><strong>Gender:</strong> <%= @profile.gender %></p>
    <p class="mb-2"><strong>Balance:</strong> $<%= number_with_precision(@profile.balance, precision: 2) %></p>
    
    <%= link_to 'Edit Profile', edit_profile_path(@profile), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>  