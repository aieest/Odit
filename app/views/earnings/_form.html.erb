<%= form_with(model: [@profile, earning], local: true) do |form| %>
  <% if earning.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(earning.errors.count, "error") %> prohibited this earning from being saved:</h2>

      <ul>
        <% earning.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value, step: 0.01 %>
  </div>

  <div class="field interval">
      
    <div class="interval-selection">
      <%= form.datetime_select :interval %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>