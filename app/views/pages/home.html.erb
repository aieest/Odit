<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold text-gray-800 mb-4">Welcome, <%= current_user.email %></h1>
  <p class="text-lg text-gray-600 mb-2">Find me in app/views/pages/home.html.erb</p>
  <p class="text-lg text-green-600 font-semibold mb-6">If you are here, that means you are signed in</p>

  <% if current_user.profile %>
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Your Profile</h2>
      <p class="mb-2"><strong>Given Name:</strong> <%= current_user.profile.given_name %></p>
      <p class="mb-2"><strong>Last Name:</strong> <%= current_user.profile.last_name %></p>
      <p class="mb-2"><strong>Gender:</strong> <%= current_user.profile.gender %></p>
      <p class="mb-2"><strong>Balance:</strong> <%= number_to_currency(current_user.profile.balance) %></p>
      
      <%= link_to 'Edit Profile', edit_profile_path(current_user.profile), class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 mt-4 inline-block' %>
    </div>
  <% else %>
    <%= link_to 'Create Profile', new_profile_path, class: 'bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition duration-300 mb-4 inline-block' %>
  <% end %>

  <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded transition duration-300', data: { turbo: false } %>
</div>
