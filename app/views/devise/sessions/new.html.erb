<div class="auth-container w-100 flex justify-center items-center">
  <div class="auth-card m-auto flex flex-col justify-center items-center">

    <h2 class="auth-header font-bold">Sign in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field m-auto">
        <%= f.label :email, class: "auth-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
      </div>
    
      <div class="field m-auto">
        <%= f.label :password, class: "auth-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "auth-input" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-password-link" %>
      </div>
    
    
      <% if devise_mapping.rememberable? %>
        <div class="remember-me-field m-auto">
          <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
          <%= f.label :remember_me, class: "remember-me-label" %>
        </div>
      <% end %>
      
      <div class="actions">
        <%= f.submit "Sign in" %>
      </div>
    <% end %>
    
    <p class="auth-alt-link">
      Don't have and account?   <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold" %>
      <!-- <%= render "devise/shared/links" %> -->
    </p>
    
  </div>
</div>